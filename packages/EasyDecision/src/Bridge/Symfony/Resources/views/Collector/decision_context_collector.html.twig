{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('@EasyDecision/Icon/thinking.svg') }}
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': profiler_url }) }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('@EasyDecision/Icon/thinking.svg') }}</span>
        <strong>EasyDecision</strong>
    </span>
{% endblock %}

{% block panel %}
    <div class="sf-tabs">
        <div class="tab">
            <h3 class="tab-title">Decision Context</h3>
            <div class="tab-content">
                <h2>Decision Type</h2>

                {% if collector.decisionType %}
                    <div class="card">
                        {{ dump(collector.decisionType) }}
                    </div>
                {% else %}
                    <div class="empty">
                        <p>There is no decision type.</p>
                    </div>
                {% endif %}

                <h2>Original Input</h2>

                {% if collector.originalInput %}
                    <div class="card">
                        {{ dump(collector.originalInput) }}
                    </div>
                {% else %}
                    <div class="empty">
                        <p>There is no original input.</p>
                    </div>
                {% endif %}

                <h2>Propagation Stopped?</h2>

                {% if collector.propagationStopped %}
                    <div class="card">
                        {{ collector.propagationStopped }}
                    </div>
                {% else %}
                    <div class="empty">
                        <p>There is no propagation value defined.</p>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="tab {% if collector.ruleOutputs|length == 0 %}disabled{% endif %}">
            <h2 class="tab-title">Rule Outputs</h2>
            <div class="tab-content">
                {% if collector.ruleOutputs %}
                    <table>
                        <thead>
                            <tr>
                                <th>Rule</th>
                                <th>Output</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for output in collector.ruleOutputs %}
                            <tr>
                                <td>
                                    {{ output.rule }}
                                </td>
                                <td>
                                    {{ output.output }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty">
                        There is no output.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
